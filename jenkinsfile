pipeline {
    agent any
    stages {
        stage('Build') {
            when {
                branch 'Staging'  // Solo ejecuta este stage en la rama 'Staging'
            }
            steps {
                echo 'Staging...'
                //
            }
        }
        stage('Tests') {
            when {
                branch 'Testing'  // Solo ejecuta este stage en la rama 'Testing'
            }
            steps {
                echo 'Testing...'
                // 
            }
        }
        stage('Deploy') {
            when {
                branch 'main'  // Solo ejecuta este stage en la rama 'main'
            }
            steps {
                echo 'Deploying main...'
                // 
            }
        }
    }
}
