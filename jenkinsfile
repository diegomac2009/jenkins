pipeline {
    agent any
    stages {
        stage('Build') {
            when {
                branch 'Staging'  // Solo ejecuta este stage en la rama 'develop'
            }
            steps {
                echo 'Staging...'
                // Aqu√≠ puedes agregar comandos como `sh 'npm install'`
            }
        }
        stage('Tests') {
            when {
                branch 'Testing'  // Solo ejecuta este stage en la rama 'feature/test'
            }
            steps {
                echo 'Testing...'
                // Puedes ejecutar tus tests, ej. `sh 'npm test'`
            }
        }
        stage('Deploy') {
            when {
                branch 'main'  // Solo ejecuta este stage en la rama 'main'
            }
            steps {
                echo 'Deploying main...'
                // Despliegue, ej. `sh 'scp file user@server:/path'`
            }
        }
    }
}
